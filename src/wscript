def build(bld):
  bld.program(
    features = 'gtest',
    source = 'modint_test.cpp',
    includes = '.',
    use = 'PTHREAD',
    target = 'modint_test')

  bld.stlib(
    source = 'edit_distance.cpp',
    includes = '.',
    use = 'PTHREAD',
    target = 'EDITDISTANCE')

  bld.program(
    features = 'gtest',
    source = 'edit_distance_test.cpp',
    includes = '.',
    use = 'PTHREAD EDITDISTANCE',
    target = 'edit_distance_test')
